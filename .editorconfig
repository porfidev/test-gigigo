# EditorConfig ayuda a mantener estilos consistentes
root = true

# Configuraci√≥n global
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Archivos legacy o especiales
[*.min.js]
indent_style = unset
indent_size = unset
